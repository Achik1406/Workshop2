                        android:layout_height="wrap_content"
                        android:text="cancel"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <TextView
                        android:id="@+id/txtSave"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="save"
                        android:textColor="@color/black"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="vertical"
                android:background="@color/E9FDF2"
                android:id="@+id/linEdtEmail"
                android:visibility="gone">

                <TextView
                    android:id="@+id/sdas"
                    android:layout_width="133dp"
                    android:layout_height="match_parent"
                    android:text="Enter Your email"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/updateEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Email"
                    android:textColorHint="@color/black"/>


                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/adasd"
                        android:layout_width="259dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <TextView
                        android:id="@+id/txtCancel2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cancel"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/ds"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <TextView
                        android:id="@+id/txtSave2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="save"
                        android:textColor="@color/black"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/asdasd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="vertical"
                android:id="@+id/linEdtPhone"
                android:background="@color/E9FDF2"
                android:visibility="gone">

                <TextView
                    android:id="@+id/fsdf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Enter Your Phone Number"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/updatePhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Phone Number"
                    android:textColorHint="@color/black"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sadasd"
                        android:layout_width="259dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <TextView
                        android:id="@+id/txtCancel3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cancel"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/fgfdg"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <TextView
                        android:id="@+id/txtSave3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="save"
                        android:textColor="@color/black"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/ghfgh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:orientation="vertical"
                android:background="@color/E9FDF2"
                android:id="@+id/linEdtUsername"
                android:visibility="gone">

                <TextView
                    android:id="@+id/fadssf"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Enter Username"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/updateUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Username"
                    android:textColorHint="@color/black"/>

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fsdfsdasda"
                        android:layout_width="259dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <TextView
                        android:id="@+id/txtCancel4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cancel"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/fgfdgghf"
                        android:layout_width="33dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="" />

                    <TextView
                        android:id="@+id/txtSave4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="save"
                        android:textColor="@color/black"/>

                </RadioGroup>

                <TextView
                    android:id="@+id/ghfghjhkh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/chgBtn"
                android:layout_width="227dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/B3EAFB"
                android:textColor="@color/black"
                android:text="Change Password" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>