<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".promoDetail"
    android:background="@drawable/p01">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="138dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="3dp"
            android:background="@drawable/merch"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="226dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="185dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/announce"
            android:backgroundTint="#C798F6"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PromoCode"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/PromoValue"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <Button
                android:id="@+id/Claimpromo"
                android:layout_width="188dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/B3EAFB"
                android:text="Claim"
                android:textColor="@color/black" />

        </LinearLayout>
    </RelativeLayout>



</FrameLayout>