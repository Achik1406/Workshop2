<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Booking.ViewBooking"
    android:background="@drawable/p01"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:background="@drawable/cancelupdate" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EEBEFF"
            android:orientation="vertical">

            <EditText
                android:id="@+id/choosedate"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Please Enter Date"
                android:inputType="textPersonName"
                android:textColorHint="@color/black" />

            <EditText
                android:id="@+id/choosetime"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Please Enter Time: FORMAT(0000-0000)"
                android:textColorHint="@color/black"/>
            <EditText
                android:id="@+id/chooseID"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Please Enter Payment ID"
                android:inputType="textPersonName"
                android:textColorHint="@color/black" />

            <Button
                android:id="@+id/btnchoose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/B3EAFB"
                android:textColor="@color/black"
                android:text="Show Result" />
            <LinearLayout
                android:layout_width="364dp"
                android:layout_height="289dp"
                android:layout_gravity="center"
                android:id="@+id/linDisplay"
                android:background="#F1E6F4"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/Lanee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"

                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lindisplay2"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="364dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/B30"
                    android:text="Choose new date"
                    android:textColor="@color/black"
                    android:textSize="17dp" />

                <LinearLayout
                    android:layout_width="364dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="93dp"
                        android:layout_height="match_parent"
                        android:background="@color/B30"
                        android:text="Date : "
                        android:textColor="@color/black"
                        android:textSize="17dp" />

                    <EditText
                        android:id="@+id/edtDate"
                        android:layout_width="323dp"
                        android:layout_height="match_parent"
                        android:background="@color/B30"
                        android:inputType="textPersonName"
                        android:text="date"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </LinearLayout>

                <Button
                    android:id="@+id/UpdateBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:backgroundTint="@color/B3EAFB"
                    android:text="Update"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


                <Button
                    android:id="@+id/cancelBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/B3EAFB"
                    android:text="Cancel book? click here"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/textView30"
                    android:layout_width="150dp"
                    android:layout_height="104dp"
                    android:layout_gravity="end"
                    android:background="@drawable/logooosss" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>







</LinearLayout>